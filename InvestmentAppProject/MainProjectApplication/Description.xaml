<Window x:Class="MainProjectApplication.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainProjectApplication"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Description" Height="400" Width="700">

    <Border BorderBrush="#FF000000"  BorderThickness="2" CornerRadius="5">
        <Grid Background="LightBlue">

            <!--Description Text Box-->
            <TextBox x:Name="descriptionbox" Background="LightYellow" Margin="36,26,23.6,71.4" FontFamily="Georgia" 
                     FontSize="14" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"
                     IsReadOnly="True"></TextBox>

            <Button Content="OK" Margin="455,320,23.6,10.4" Background="Turquoise" Click="Button_Click"></Button>

        </Grid>

    </Border>
</Window>
